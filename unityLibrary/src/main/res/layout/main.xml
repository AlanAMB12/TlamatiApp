<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@drawable/fondoarquitectura">

    <FrameLayout
        android:id="@+id/fl_forUnity"
        android:layout_width="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="60dp"
        android:layout_height="match_parent">

    </FrameLayout>

    <ImageView
        android:id="@+id/ivins"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/instruccionesarq" />

    <ImageView
        android:id="@+id/ivarq"
        android:layout_width="250dp"

        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/botonarquitectura"
        app:srcCompat="@drawable/botonarquitectura" />


    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:background="@drawable/areadeescaneo"
        app:srcCompat="@drawable/areadeescaneo" />


    <Button
        android:id="@+id/bt_rotRight"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:background="@drawable/botonregreso"
        app:srcCompat="@drawable/botonregreso" />




    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:foregroundGravity="center"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.viewpager.widget.ViewPager>



</RelativeLayout>